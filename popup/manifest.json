{
  "manifest_version": 3,
  "name": "TabTrackr",
  "version": "1.0",
  "description": "Group, save, and track your Chrome tabs with AI.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "../background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "TabTrackr",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
} 